#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdint.h>
#include <string.h>
#include <malloc.h>

#define SIZE 7


int sumTwoElementsInTheArray(int* arr, int size,int value,int *firstElement,int *secondElement)
{
	int i,j;
	for (i = 0; i < size; i++)
	{
		for (j = i + 1; j < size; j++)
		{
			if (arr[j] + arr[i] == value)
			{
				*firstElement = i;
				*secondElement = j;
				return 1;
			}
		}

	}

	return 0;
}


int main()
{

	int array[SIZE] = { 1,3,4,7,9,10,12};
	int firstElement;
	int secondElement;
	int value;
	int result;

	puts("Enter a value: ");
	scanf("%d", &value);

	result = sumTwoElementsInTheArray(array, SIZE, value, &firstElement, &secondElement);
	if (result == 1)
	{
		printf("Indexes of 1ยบ element in %d\n", firstElement);
		printf("Indexes of 2ยบ element in %d\n", secondElement);
	}
	else
		printf("No 2 sum element in the array iqual to value");
		

	return 0;
}
