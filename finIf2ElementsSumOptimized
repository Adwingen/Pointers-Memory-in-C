#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdint.h>
#include <string.h>
#include <malloc.h>

#define SIZE 7


int finIf2ElementsSumOptimized(int* arr, int size,int value,int *firstElement,int *secondElement)
{
	int i,j;
	int currentSum;
	i = 0;
	j = size - 1;
	while (i < j)
	{
		currentSum = arr[i] + arr[j];
		if (currentSum == value)
		{
			*firstElement = i;
			*secondElement = j;
			return 1;
		}
		else if (currentSum < value)
			i++;
		else //currentSum > value
			j--;
	}

	return 0;
}


int main()
{

	int array[SIZE] = { 1,3,4,7,9,10,12};
	int firstElement;
	int secondElement;
	int value;
	int result;

	puts("Enter a value: ");
	scanf("%d", &value);

	result = finIf2ElementsSumOptimized(array, SIZE, value, &firstElement, &secondElement);
	if (result)
	{
		printf("Indexes of 1ยบ element in %d\n", firstElement);
		printf("Indexes of 2ยบ element in %d\n", secondElement);
	}
	else
		printf("No 2 sum element in the array iqual to value");
		

	return 0;
}
